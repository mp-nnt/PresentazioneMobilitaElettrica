<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:Form editable="true" id="infoForm" width="100%" class="personal-data-form">
		<f:layout>
			<f:GridLayout singleColumn="true"/>
		</f:layout>
		<f:formContainers>
			<!-- Primo container con i dati dell'impresa richiedente. Titolo -->
			<f:FormContainer title="{i18n>infoTitle}" id="infoView">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<FormattedText htmlText="{i18n>infoText}"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
						<f:FormContainer title="{i18n>infoTitle2}" id="infoView2">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<Text text="{i18n>infoTitle2_did}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement >
						<f:fields>
							<Text text="{i18n>infoTextTitle2}" class="fontBold"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement >
						<f:fields>
							<FormattedText htmlText="{i18n>infoText2}"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>