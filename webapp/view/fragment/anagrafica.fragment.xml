<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:Form editable="true" id="personalDataForm" width="100%" class="personal-data-form">
		<f:layout>
			<f:GridLayout singleColumn="true"/>
		</f:layout>
		<f:formContainers>
			<!-- Primo container con i dati dell'impresa richiedente. Titolo -->
			<f:FormContainer title="{i18n>requester}" id="requester">
				<f:formElements>
					<f:FormElement label="{i18n>surname}" id="surname_lbl">
						<f:fields>
							<Input width="50%" id="surname_inp" value="{/surname}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>name}" id="name_lbl">
						<f:fields>
							<Input width="50%" id="name_inp" value="{/name}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>owner}" id="owner_lbl">
						<f:fields>
							<Input width="50%" id="owner_inp" value="{/owner}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>piva}" id="piva_lbl">
						<f:fields>
							<Input width="50%" id="piva_inp" value="{/piva}" change="onUserInfo" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>fiscalCode}" id="fiscalCode_lbl">
						<f:fields>
							<Input width="50%" id="fiscalCode_inp" value="{/fiscalCode}" change="onUserInfo" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>sector}" id="sector_lbl">
						<f:fields>
							<RadioButtonGroup id="sector_grp">
								<buttons>
									<RadioButton text="{i18n>craft}" selected="{/craft}" groupName="gr_sector"/>
									<RadioButton text="{i18n>industry}" selected="{/industry}" groupName="gr_sector"/>
									<RadioButton text="{i18n>trade}" selected="{/trade}" groupName="gr_sector"/>
									<RadioButton text="{i18n>services}" selected="{/services}" groupName="gr_sector"/>
									<RadioButton text="{i18n>freelance}" selected="{/freelance}" groupName="gr_sector"/>
									<RadioButton text="{i18n>turism}" selected="{/turism}" groupName="gr_sector"/>
								</buttons>
							</RadioButtonGroup>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
		<f:formContainers>
			<!-- Secondo container con i dati della sede dell'impresa richiedente. Titolo -->
			<f:FormContainer title="{i18n>requesterLocation}" id="requesterLocation">
				<f:formElements>
					<f:FormElement label="{i18n>state}" id="state_lbl">
						<f:fields>
							<Input width="50%" id="state_inp" value="{/state}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>region}" id="region_lbl">
						<f:fields>
							<Input width="50%" id="region_inp" value="{/region}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>postCode}" id="postCode_lbl">
						<f:fields>
							<Input width="50%" id="postCode_inp" value="{/postCode}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>city}" id="city_lbl">
						<f:fields>
							<Input width="50%" id="city_inp" value="{/city}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>district}" id="district_lbl">
						<f:fields>
							<Input width="50%" id="district_inp" value="{/district}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>street}" id="street_lbl">
						<f:fields>
							<Input width="50%" id="street_inp" value="{/street}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>streetNumber}" id="streetNumber_lbl">
						<f:fields>
							<Input width="50%" id="streetNumber_inp" value="{/streetNumber}" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>telephone}" id="telephone_lbl">
						<f:fields>
							<Input width="50%" id="telephone_inp" value="{/telephone}" editable="false" type="Tel" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>mail}" id="mail_lbl">
						<f:fields>
							<Input width="50%" id="mail_inp" value="{/mail}" type="Email" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>pec}" id="pec_lbl">
						<f:fields>
							<Input width="50%" id="pec_inp" value="{/pec}" type="Email" editable="false" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>language}" id="language_lbl">
						<f:fields>
							<RadioButtonGroup id="language_grp" columns="2">
								<buttons>
									<RadioButton text="{i18n>italian}" selected="{/italian}" groupName="gr_language"/>
									<RadioButton text="{i18n>german}" selected="{/german}" groupName="gr_language"/>
								</buttons>
							</RadioButtonGroup>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
		<f:formContainers>
			<!-- Terzo container: classificazione dell'impresa. Titolo -->
			<f:FormContainer title="{i18n>classImp}" id="classImp">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<Text text="{i18n>classImpDid}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>classImp1}" id="class_lbl">
						<f:fields>
							<RadioButtonGroup id="classImpBot" columns="3">
								<buttons>
									<RadioButton text="{i18n>classImpP}" selected="{/classP}"/>
									<RadioButton text="{i18n>classImpM}" selected="{/classM}"/>
									<RadioButton text="{i18n>classImpG}" selected="{/classG}"/>
								</buttons>
							</RadioButtonGroup>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>